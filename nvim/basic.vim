" enable true color
set termguicolors

" 语法高亮
syntax enable
" 显示当前行号
set number
" 显示相对行号
set relativenumber
" 高亮当前行
set cursorline
" 文本不会超出当前屏幕
set wrap
" 显示命令
set showcmd
" 普通模式下输入命令按下tab可选择
set wildmenu
" 自动缩进
set autoindent
" 智能缩进
set smartindent
" 设置tab制表符宽度为4
set tabstop=4
" 设置按 tab 时缩进的宽度为 4
set softtabstop=4
" 输入时显示相对应的括号
set showmatch
" 设置搜索文本高亮
set hlsearch
" 每次启动vim时清除文本搜索高亮内容
exec "nohlsearch"
" 边输入边搜索高亮
set incsearch
" 只能搜索, 大小写
set smartcase
set backspace=2
